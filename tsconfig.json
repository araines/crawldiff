{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "outDir": "lib",
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "es2016",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  }
}
